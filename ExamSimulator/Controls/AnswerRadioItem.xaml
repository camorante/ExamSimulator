<UserControl x:Class="ExamSimulator.Controls.AnswerRadioItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamSimulator.Controls"
             mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">
        <RadioButton Name="rbtSelector" VerticalAlignment="Center" Checked="rbtSelector_Checked" Background="#FFD8E4F5" BorderBrush="#FF8EC6FF" FontSize="14" />
        <Label Name="lblLetter" Content="X." Foreground="#FF979797" FontSize="14"></Label>
        <TextBlock Name="lblAnswer"  Text="The answer goes here!" MaxWidth="1000px" VerticalAlignment="Center" Foreground="#FF707070" FontSize="14" TextWrapping="WrapWithOverflow"/>
    </StackPanel>
</UserControl>
